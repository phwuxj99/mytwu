<p><h2>
  <b> Name: </b>
  <%= @post.name %></h2>
</p>


<div class="base-layer">
	<div class="table-row">	
		<div class="left-container2">
			<b> Title: </b>
  			<%= @post.title %> 
		</div>
		<div class="right-container2a" >
			| <%= link_to 'Show game players', edit_post_path(@post) %> |
				<%= link_to 'Back', posts_path %> |
		</div>
	</div>
</div>

<br />

<h3>Players ( Total: <%= @post.games.count %> )</h3>
  <% @post.games.each do |game| %>
    <ul>
      <li>    
      <div>      
        <%= game.fname %> --  
        <%= link_to  "Remove", remove_post_path(@post.id,game.id)  %>
        </div>
      </li>
    </ul>
  <% end %>

<h3>Add the following players to game</h3>
<% @post.rosters.playernogame.each do |roster| %>
    <ul>
    <li>    
    <%= roster.fname %> -- 
      <%= link_to 'Add Player', addplayer_post_path(@post.id,roster.id) %>
              </li>
    </ul>
  <% end %>
  <br />


